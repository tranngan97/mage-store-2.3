<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="catalog.topnav">
            <block class="Magento\Framework\View\Element\Html\Link" name="currency"
                   template="MageStore_CustomWidget::menu/custom_menu.phtml">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Business News</argument>
                    <argument name="path" xsi:type="string">widget/index/news</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link" name="news"
                   template="MageStore_CustomWidget::menu/custom_menu.phtml">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Exchange Rates</argument>
                    <argument name="path" xsi:type="string">widget/index/currency</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
